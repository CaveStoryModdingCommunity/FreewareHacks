			<field type="text" offset="0x48C2BC" size="64"/>
		<panel>
			<field type="label">Date for Line 2</field>
			<field type="label">Quit Dialouge</field>
			<field type="text" offset="0x48C420" size="12" col="1"/>
			<field type="text" offset="0x48C61C" size="7"/>
