			<field type="label">Window Title</field>
			<field type="text" offset="0x48EFD0" size="40"/>
			<panel>
				<field type="label">Save File</field>
				<field type="label">Window Position File</field>
				<field type="label">(Edit this too)</field>
				<field type="label">Config File*</field>
				<field type="label">Timer File</field>
				<field type="label">(Edit this too)</field>
				<field type="text" offset="0x48C700" size="12" col="1"/>
				<field type="text" offset="0x48C610" size="12"/>
				<field type="text" offset="0x48C3D4" size="12"/>
